{
    "name": "MastermindAI",
    "description": "Check research relevance instantly",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "main.html",
      "default_title": "Open MastermindAI",
      "default_icon": "images/logo.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }