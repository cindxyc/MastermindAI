{
    "name": "MastermindAI",
    "description": "Check relevance of an online article to a given topic",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "default_popup.html",
      "default_icon": "images/logo.png"
    }
  }